<Window x:Class="Car_Rental.Views.Add_Customer_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Customer" Height="550" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <StackPanel Margin="0,5">
                <TextBlock Text="First Name" />
                <TextBox x:Name="FirstNameBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Last Name" />
                <TextBox x:Name="LastNameBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Email" />
                <TextBox x:Name="EmailBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Phone" />
                <TextBox x:Name="PhoneBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="PESEL" />
                <TextBox x:Name="PeselBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Driver License Number" />
                <TextBox x:Name="LicenseBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Date of Birth" />
                <DatePicker x:Name="DateOfBirthPicker"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Street" />
                <TextBox x:Name="StreetBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="City" />
                <TextBox x:Name="CityBox"/>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock Text="Postal Code" />
                <TextBox x:Name="PostalCodeBox"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Width="80" Click="Add_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
