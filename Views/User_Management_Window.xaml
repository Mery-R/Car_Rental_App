<UserControl x:Class="Car_Rental.Views.Management_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="450" Width="710">

    <UserControl.Resources>
        <Style x:Key="GridViewHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0A003A"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <ListView Name="UserListView" SelectionMode="Single" Margin="0,0,0,40">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding UserID}" Width="30" HeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding UserID}" FontSize="13" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Nazwa użytkownika" DisplayMemberBinding="{Binding Username}" Width="150" HeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Username}" FontSize="13" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Imię" DisplayMemberBinding="{Binding FirstName}" Width="100" HeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding FirstName}" FontSize="13" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding LastName}" Width="100" HeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LastName}" FontSize="13" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="200" HeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Email}" FontSize="13" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Rola" DisplayMemberBinding="{Binding Access}" Width="100" HeaderContainerStyle="{StaticResource GridViewHeaderStyle}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Access}" FontSize="13" TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            
        </ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button Content="Dodaj użytkownika" Width="120" Height="30" Click="AddUserButton_Click" Margin="0,0,5,0"/>
            <Button Content="Usuń użytkownika" Width="120" Height="30" Click="RemoveUserButton_Click" Margin="0,0,5,0"/>
            <Button Content="Edytuj użytkownika" Width="120" Height="30" Click="EditUserButton_Click" Margin="0,0,5,0"/>
        </StackPanel>
    </Grid>
</UserControl>
