<Window x:Class="Car_Rental.Views.AddCarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj samochód" Height="250" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Marka:" />
        <TextBox x:Name="BrandTextBox" />
        <TextBlock Text="Model:" />
        <TextBox x:Name="ModelTextBox" />
        <TextBlock Text="Rok produkcji:" />
        <TextBox x:Name="YearTextBox" />
        <TextBlock Text="Numer rejestracyjny:" />
        <TextBox x:Name="PlateTextBox" />
        <CheckBox x:Name="AvailabilityCheckBox" Content="Dostępny" Margin="0,10,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Anuluj" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>