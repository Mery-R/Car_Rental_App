<Window x:Class="Car_Rental.Views.Rent_Car_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Rental.Views"
        mc:Ignorable="d"
        Title="Rent a Car" Height="500" Width="450">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,0">
            <TextBlock Text="Car Details" FontWeight="Bold" FontSize="16" />
            <TextBlock x:Name="CarDetailsText" FontSize="14" />
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <TextBlock Text="Select Customer:" FontSize="14" FontWeight="Bold"/>
            <ComboBox x:Name="CustomerComboBox" DisplayMemberPath="FullName" SelectedValuePath="CustomerId" />
            <Button Content="Add New Customer" Margin="0,5,0,0" Click="AddCustomer_Click" />
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10,0,10">
            <TextBlock Text="Rental Period:" FontSize="14" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal">
                <DatePicker x:Name="StartDatePicker" SelectedDateChanged="StartDatePicker_SelectedDateChanged" />
                <TextBlock Text=" to " Margin="5,0" VerticalAlignment="Center" />
                <DatePicker x:Name="EndDatePicker" SelectedDateChanged="EndDatePicker_SelectedDateChanged" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,10,0,10" Orientation="Horizontal">
            <TextBlock Text="Total Price:" Margin="0,0,5,0" FontSize="14" FontWeight="Bold"/>
            <TextBlock x:Name="TotalPriceText" FontSize="14" FontWeight="Bold" />
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10,0,10" Orientation="Horizontal">
            <TextBlock Text="Deposit:" Margin="0,0,5,0" FontSize="14" FontWeight="Bold"/>
            <TextBlock x:Name="DepositText" FontSize="14" FontWeight="Bold" />
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button Content="Confirm" Width="150" Margin="0,0,50,0" Click="Confirm_Click" Height="40"/>
            <Button Content="Cancel" Width="150" Click="Cancel_Click" Height="44" />
        </StackPanel>
    </Grid>
</Window>
